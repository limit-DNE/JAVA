<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="com.limitDNE.LoanCalculator.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" fx:id="loanCalculatorGridPane">
    <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="Annual Interest Rate"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="annualInterestRateTextField"/>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="1" text="Number of Years"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="numberOfYearsTextField"/>
    <Label GridPane.columnIndex="0" GridPane.rowIndex="2" text="Loan Amount"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="loanAmountTextField"/>
    <Button GridPane.columnIndex="1" GridPane.rowIndex="3" text="Calculate" fx:id="calculateButton" onAction="#onCalculateClicked"/>
    <Text GridPane.columnIndex="1" GridPane.rowIndex="7" text="Monthly Payment" fx:id="monthlyPaymentText"/>
    <Text GridPane.columnIndex="1" GridPane.rowIndex="8" fx:id="monthlyPaymentResultText"/>
    <Text GridPane.columnIndex="1" GridPane.rowIndex="10" text="Total Payment" fx:id="totalPaymentText"/>
    <Text GridPane.columnIndex="1" GridPane.rowIndex="11" fx:id="totalPaymentResultText"/>
</GridPane>